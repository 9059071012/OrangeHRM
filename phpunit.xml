<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        colours = "true"
        convertErrorsToExceptions   = "true"
        convertNoticesToExceptions  = "true"
        convertWarningsToExceptions = "true"
        strict = "true"
    >

    <filter>
        <blacklist>
            <directory suffix=".php">../build</directory>
            <directory suffix=".php">../dbscript</directory>
            <directory suffix=".php">../devDocs</directory>
            <directory suffix=".php">../devTools</directory>
            <directory suffix=".php">../lib</directory>
        </blacklist>
        <whitelist>
            <directory suffix=".php">../symfony</directory>
            <directory suffix=".php">../installer</directory>
            <directory suffix=".php">../upgrader</directory>
            <directory suffix=".php">../tests</directory>
            <exclude>
                <directory suffix=".php">../symfony/cache</directory>
                <directory suffix=".php">../symfony/config</directory>
                <directory suffix=".php">../symfony/data</directory>
                <directory suffix=".php">../symfony/lib</directory>
                <directory suffix=".php">../symfony/web</directory>
            </exclude>
        </whitelist>
    </filter>

    <testsuites>
        <testsuite name="All Tests">
            <file>symfony/test/PluginAllTests.php</file>
        </testsuite>
    </testsuites>

</phpunit>